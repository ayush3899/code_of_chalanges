#include <cmath>
#include <cstdio>
#include <vector>
#include <iostream>
#include <algorithm>
#define ll long long int
using namespace std;


int main() {
    /* Enter your code here. Read input from STDIN. Print output to STDOUT */   
    ll t;
    cin>>t;
    while(t--)
    {
        ll n;
        cin>>n;
        ll p= n*(n-1)*(n+1)*(3*n+2)/12;
        cout<<p<<"\n";    
    }
    
    return 0;
}
